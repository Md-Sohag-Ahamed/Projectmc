@model Projectmc.Models.customer

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm())
{
    <div>
        <label>Customer Name</label>
        <div>
            @Html.EditorFor(m => m.CustomerName)
        </div>
    </div>
    <div>
        <label>Customer Address</label>
        <div>
            @Html.EditorFor(m => m.CustomerAddress)
        </div>
    </div>
    <div>
        <label>Customer Phone</label>
        <div>
            @Html.EditorFor(m => m.CustomerPhone)
        </div>
    </div>
    <div>
        <label>Drug Name</label>
        <div>
            @Html.DropDownList("DrugId", null, new { @class="form-control"})
        </div>
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>
}
