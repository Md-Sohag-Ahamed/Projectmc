@model IEnumerable<Projectmc.Models.customer>

@{
    ViewBag.Title = "Index";
}

<h2>All Customer</h2>
@Html.ActionLink("Create", "Create", "Customer")
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <tr>

                <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.Drug.DrugName)
                </th>
                <th>....</th>
            </tr>
            @foreach(var item in Model)
            {
        <tr>
            <td>@item.CustomerName</td>
            <td>@item.CustomerAddress</td>
            <td>@item.CustomerPhone</td>
            <td>@item.Drug.DrugName</td>



            <td>
                @Html.ActionLink("Details", "Details", "Pharmacy", new { id = item.customerId }, null)||
                @Html.ActionLink("Edit", "Edit", "Pharmacy", new { id = item.customerId }, null)||
                @Html.ActionLink("Delete", "Delete", "Pharmacy", new { id = item.customerId }, null)
            </td>

        </tr>

            }
        </table>
    </div>
</div>
